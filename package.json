    "type": "git",
    "url": "git+https://github.com/Nick-1979/polkamask.git"
  },
  "license": "(MIT-0 OR Apache-2.0)",
  "author": "",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --parallel --topological --verbose run build",
    "install-chrome": "./scripts/install-chrome.sh",
    "lint": "yarn lint:eslint && yarn lint:misc --check",
    "lint:eslint": "eslint . --cache --ext js,ts",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:misc --write",
    "lint:misc": "prettier '**/*.json' '**/*.md' '!**/CHANGELOG.md' '**/*.yml' --ignore-path .gitignore",
    "start": "yarn workspaces foreach --parallel --interlaced --verbose run start",
    "test": "cd packages/snap && jest test"
  },
  "devDependencies": {
    "@metamask/eslint-config": "^10.0.0",
    "@metamask/eslint-config-jest": "^10.0.0",
    "@metamask/eslint-config-nodejs": "^10.0.0",
    "@metamask/eslint-config-typescript": "^10.0.0",
    "@metamask/snaps-ui": "latest",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.8.2",
    "eslint-plugin-jsdoc": "^39.2.9",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.7.0",
    "prettier": "^2.2.1",
    "prettier-plugin-packagejson": "^2.2.18",
    "ts-jest": "^29.1.0",
    "typescript": "^4.7.4",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "packageManager": "yarn@3.2.1",
  "engines": {
    "node": ">=18.6.0"
  },
  "dependencies": {
    "@metamask/detect-provider": "^2.0.0",
    "@metamask/key-tree": "^9.0.0",
    "@polkadot/api": "^10.9.1",
    "@polkadot/extension-chains": "latest",
    "@polkadot/keyring": "^12.5.1",
    "@polkadot/types": "^10.11.1",
    "@polkadot/ui-keyring": "^3.6.3",
    "@polkadot/util": "^12.5.1"
  }
